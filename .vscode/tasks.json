{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Integra_AI",
      "type": "shell",
      "command": "npm start",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Dev Mode (Watch)",
      "type": "shell", 
      "command": "npm run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Build TypeScript",
      "type": "shell",
      "command": "npm run build", 
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Lint Code",
      "type": "shell",
      "command": "npm run lint",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Fix Linting Issues",
      "type": "shell",
      "command": "npm run lint:fix",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "npm run format",
      "group": "test"
    }
  ]
}
